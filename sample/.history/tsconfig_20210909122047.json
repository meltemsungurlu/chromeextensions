{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "outDir": "out", 
    "strict": true,
    "typeRoots": [
      "./lib",
      "./modules",
      "./*.ts",
      "./modules/*.ts"
    ]
  },
  "files": [
    "globals.d.ts", 
  ],
  "include": [
    "shared/*.js",
    "contentscripts/*.js", 
  ],
  "exclude": [
    "out/*.*", 
  ],
  "compileOnSave": true,
  "typingOptions": {
    "enableAutoDiscovery": true
  }
}