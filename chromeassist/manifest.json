{
	"name": "Chrome Asistan",
	"version": "1.0.0.1",
	"description": "Chrome browser yardımcı hizmetleri",
	
  "browser_action": {
    "popup" : "tabs.html"
  },
	
	"background": {
		"scripts": [
			"shared/bootstrap.js",
			"shared/background.js",
			"background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"run_at": "document_end",
			"exclude_matches": [
				"http://api.hadiii.com/*"
			],
			"js": [
				"shared/bootstrap.js",
				"contentscripts/content.js"
			],
			"css": [
				"shared/bootstrap.css"
			]
		} 
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; connect-src http://*.whatsapp.com 'self'; object-src 'self';",
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"permissions": [
		"management",
		"activeTab",
		"declarativeContent",
		"storage",
		"contextMenus",
		"cookies",
		"*://*/*",
		"tabs",
		"webNavigation",
		"http://*/*",
		"https://*/*"
	],
	"commands": {
          "tab-right": {
            "suggested_key": {
              "default": "Ctrl+Shift+L",
              "mac": "Command+Shift+L"
            },
            "description": "Toggle feature foo"
          },
          "tab-left": {
            "suggested_key": {
              "default": "Ctrl+Shift+K",
              "mac": "Command+Shift+K"
            },
            "description": "Toggle feature foo"
          },
          "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+Right",
              "mac": "Command+Shift+Y",
              "chromeos": "Ctrl+Shift+U",
              "linux": "Ctrl+Shift+J"
            }
          },
          "_execute_page_action": {
            "suggested_key": {
              "default": "Ctrl+Shift+E",
              "windows": "Alt+Shift+P",
              "mac": "Alt+Shift+P"
            }
          }
        },
	"options_page": "options.html",
	"manifest_version": 2
}
